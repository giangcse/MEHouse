<!-- Modal -->
<div class="modal fade" id="themloaihanghoa" tabindex="-1" aria-labelledby="loaihanghoaModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="POST" id="themloaihanghoa_form">
                <div class="modal-header">
                    <h5 class="modal-title" id="loaihanghoaModal">Thêm loại hàng hóa</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label for="loaihanghoa" class="col-sm-4 col-form-label">Loại hàng hóa</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="text" name="loaihanghoa" id="loaihanghoa"
                                placeholder="Áo...">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="maloaihanghoa" class="col-sm-4 col-form-label">Mã loại hàng hóa</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="text" name="maloaihanghoa" id="maloaihanghoa"
                                placeholder="ao01...">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <input type="button" id="themBtn" name="themBtn" class="btn btn-primary" value="Thêm">
                </div>
            </form>
        </div>
    </div>
</div>

