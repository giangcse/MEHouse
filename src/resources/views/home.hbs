<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashboard</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <form class="form-group">
                        <input type="text" name="search" id="search" class="form-control"
                            placeholder="Tên sản phẩm cần tìm">
                    </form>
                </ol>
            </div>
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
{{!-- Tìm kiếm sản phâm --}}
<script>
    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#products .col-md-2").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row" id="products">
            {{#each products}}
            <div class="col-md-2" id="card-{{this._id}}">
                <div class="card">
                    <img src="{{this.product_image}}" class="card-img-top" id="product_img" alt="{{this.product_name}}">
                    <div class="card-body" id="san-pham">
                        <h4 id="product_name" value="{{this.product_name}}">{{this.product_name}}</h4>
                        <p class="card-text" id="description"><small
                                class="text-muted">{{this.product_description}}</small></p>
                        <div class="form-group row">
                            <p class="card-text col-7"><i class="fas fa-tag"></i>
                                {{this.product_type}}<br><b
                                    style="color: red; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; font-size: larger;">{{this.product_price}}
                                    VNĐ</b></p>
                            <form method="POST" id="mua_form" class="col-5">
                                <button type="button" value="{{this.product_name}}"
                                    class="btn btn-success col-12 add-cart" id="{{this._id}}">
                                    <i class="fas fa-shopping-basket"></i>
                                </button>
                            </form>
                        </div>
                        <small class="text-muted sl" id="soluong">Số lượng: {{this.product_quantity}}</small>
                    </div>
                </div>
            </div>
            {{/each}}


        </div>
    </div>
</section>
<script src="scripts/home.js"></script>
<!-- /.content -->